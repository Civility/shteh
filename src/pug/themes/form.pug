								label(for='validate_name') Компания
								input.form-control.form-control-lg#validate_name(maxlength="32" value='' type='text' pattern="^([А-ЯA-Z]|[А-ЯA-Z][\x27а-яa-z]{1,}|[А-ЯA-Z][\x27а-яa-z]{1,}\-([А-ЯA-Z][\x27а-яa-z]{1,}|(оглы)|(кызы)))\040[А-ЯA-Z][\x27а-яa-z]{1,}(\040[А-ЯA-Z][\x27а-яa-z]{1,})?$" placeholder='Наименование' name='firm' required)
